<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaAdulto"
    android:background="@drawable/tela2">

    <Switch
        android:textOn="Ligado"
        android:textOff="Desligado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ligar"
        android:id="@+id/swt_adulto_ligado"
        android:layout_alignParentTop="true"
        android:textSize="18dp"
        android:checked="false"
        android:layout_marginLeft="116dp"
        android:layout_marginStart="116dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/layout_adulto_manual"
        android:layout_alignEnd="@+id/layout_adulto_manual" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout_adulto_manual">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="IP:"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:width="60dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/tvw_adulto_ip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:width="200dp"
            android:maxLength="16"
            android:inputType="text"
            android:background="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nome:"
            android:id="@+id/textView2"
            android:textSize="18dp"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:width="60dp"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/textView"
            android:layout_toLeftOf="@+id/tvw_adulto_ip"
            android:layout_toStartOf="@+id/tvw_adulto_ip" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/tvw_adulto_nome"
            android:width="100dp"
            android:maxLength="5"
            android:background="#ffffff"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignLeft="@+id/tvw_adulto_ip"
            android:layout_alignStart="@+id/tvw_adulto_ip"
            android:layout_alignRight="@+id/tvw_adulto_ip"
            android:layout_alignEnd="@+id/tvw_adulto_ip" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_adulto_salvar"
            android:background="@drawable/nuvem2"
            android:layout_below="@+id/tvw_adulto_nome"
            android:layout_alignRight="@+id/tvw_adulto_nome"
            android:layout_alignEnd="@+id/tvw_adulto_nome"
            android:layout_marginRight="85dp"
            android:layout_marginEnd="85dp"
            android:layout_marginTop="62dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tvw_adulto_nome"
            android:layout_alignStart="@+id/tvw_adulto_nome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscando Dispositos. Aguarde..."
            android:id="@+id/tvw_adulto_busca"
            android:visibility="invisible"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btn_adulto_salvar"
            android:layout_marginTop="127dp" />
    </RelativeLayout>

    <Switch
        android:textOn="Auto"
        android:textOff="Manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descoberta de rede"
        android:id="@+id/swt_adulto_descoberta"
        android:textSize="18dp"
        android:checked="false"
        android:layout_above="@+id/layout_adulto_manual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:layout_alignRight="@+id/swt_adulto_ligado"
        android:layout_alignEnd="@+id/swt_adulto_ligado" />
</RelativeLayout>
